#include <iostream>
using namespace std;


void plusSign(int size) {
   
    for (int i = 0; i < size; i++) {
        for (int j = 0; j < size * 2 + 1; j++) {
            if (j == size) {
                cout << "*";
            } else {
                cout << " ";
            }
        }
        cout << endl;
    }

    for (int i = 0; i < size * 2 + 1; i++) {
        cout << "*";
    }
    cout << endl;

 
    for (int i = 0; i < size; i++) {
        for (int j = 0; j < size * 2 + 1; j++) {
            if (j == size) {
                cout << "*";
            } else {
                cout << " ";
            }
        }
        cout << endl;
    }
}

int main() {
    plusSign(6); 
    return 0;
}
